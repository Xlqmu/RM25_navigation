<?xml version="1.0" encoding="UTF-8"?>
<sdf version="1.6">
  <model name="robot">
    <!-- 定义模型的惯性属性 -->
    <static>false</static>

    <!-- Odom 链接 -->
    <link name="odom">
      <pose>0 0 0 0 0 0</pose>
    </link>

    <!-- Base Footprint 链接 -->
    <link name="base_footprint">
      <pose>0 0 0 0 0 0</pose>
      <visual name="base_footprint_visual">
        <geometry>
          <box>
            <size>0.001 0.001 0.001</size>
          </box>
        </geometry>
        <material>
          <ambient>1 1 1 1</ambient>
          <diffuse>1 1 1 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Odom 到 base_link 的固定关节 -->
    <joint name="odom_to_base" type="fixed">
      <parent>odom</parent>
      <child>base_link</child>
      <pose>0 0 0 0 0 0</pose>
    </joint>

    <!-- Base Link 链接 -->
    <link name="base_link">
      <pose>0 0 0.075 0 0 0</pose> <!-- base_height/2 = 0.15/2 = 0.075 -->
      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.6 0.4 0.15</size>
          </box>
        </geometry>
        <material>
          <ambient>0.5 0.5 0.5 1</ambient>
          <diffuse>0.5 0.5 0.5 1</diffuse>
        </material>
      </visual>
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.6 0.4 0.15</size>
          </box>
        </geometry>
      </collision>
      <inertial>
        <mass>15</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.01</iyy>
          <iyz>0.0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <!-- 四个麦轮的定义 -->
    <!-- 轮子1 -->
    <link name="wheel_1">
      <pose>0.2 0.2 0 1.5707963 0 0</pose> <!-- x_reflect=1, y_reflect=1 -->
      <visual name="wheel_1_visual">
        <geometry>
          <cylinder>
            <radius>0.06</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>
      <collision name="wheel_1_collision">
        <geometry>
          <cylinder>
            <radius>0.06</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.01</iyy>
          <iyz>0.0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="wheel_1_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_1</child>
      <pose>0.2 0.2 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-3.1415926</lower>
          <upper>3.1415926</upper>
        </limit>
      </axis>
      <physics>
        <ode>
          <mu>1.0</mu>
          <mu2>1.0</mu2>
          <kp>10000000.0</kp>
          <kd>1.0</kd>
        </ode>
      </physics>
    </joint>

    <!-- 轮子2 -->
    <link name="wheel_2">
      <pose>0.2 -0.2 0 1.5707963 0 0</pose> <!-- x_reflect=1, y_reflect=-1 -->
      <visual name="wheel_2_visual">
        <geometry>
          <cylinder>
            <radius>0.06</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>
      <collision name="wheel_2_collision">
        <geometry>
          <cylinder>
            <radius>0.06</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.01</iyy>
          <iyz>0.0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="wheel_2_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_2</child>
      <pose>0.2 -0.2 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-3.1415926</lower>
          <upper>3.1415926</upper>
        </limit>
      </axis>
      <physics>
        <ode>
          <mu>1.0</mu>
          <mu2>1.0</mu2>
          <kp>10000000.0</kp>
          <kd>1.0</kd>
        </ode>
      </physics>
    </joint>

    <!-- 轮子3 -->
    <link name="wheel_3">
      <pose>-0.2 0.2 0 1.5707963 0 0</pose> <!-- x_reflect=-1, y_reflect=1 -->
      <visual name="wheel_3_visual">
        <geometry>
          <cylinder>
            <radius>0.06</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>
      <collision name="wheel_3_collision">
        <geometry>
          <cylinder>
            <radius>0.06</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.01</iyy>
          <iyz>0.0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="wheel_3_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_3</child>
      <pose>-0.2 0.2 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-3.1415926</lower>
          <upper>3.1415926</upper>
        </limit>
      </axis>
      <physics>
        <ode>
          <mu>1.0</mu>
          <mu2>1.0</mu2>
          <kp>10000000.0</kp>
          <kd>1.0</kd>
        </ode>
      </physics>
    </joint>

    <!-- 轮子4 -->
    <link name="wheel_4">
      <pose>-0.2 -0.2 0 1.5707963 0 0</pose> <!-- x_reflect=-1, y_reflect=-1 -->
      <visual name="wheel_4_visual">
        <geometry>
          <cylinder>
            <radius>0.06</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>
      <collision name="wheel_4_collision">
        <geometry>
          <cylinder>
            <radius>0.06</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.01</iyy>
          <iyz>0.0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="wheel_4_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_4</child>
      <pose>-0.2 -0.2 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-3.1415926</lower>
          <upper>3.1415926</upper>
        </limit>
      </axis>
      <physics>
        <ode>
          <mu>1.0</mu>
          <mu2>1.0</mu2>
          <kp>10000000.0</kp>
          <kd>1.0</kd>
        </ode>
      </physics>
    </joint>

    <!-- 添加 mid360 雷达 -->
    <link name="mid360">
      <pose>1 0 1 0 0 0</pose>
      <visual name="mid360_visual">
        <geometry>
          <mesh>
            <uri>file:///home/aurora/RM25/src/rm_robot_description/meshes/mid360.stl</uri>
            <scale>0.0008 0.0008 0.0008</scale>
          </mesh>
        </geometry>
      </visual>
    </link>

    <joint name="mid360_joint" type="fixed">
      <parent>base_link</parent>
      <child>mid360</child>
      <pose>0 0 0 0 0 0</pose>
    </joint>

    <!-- mid360 雷达传感器 -->
    <sensor name="mid360" type="ray">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>6.2831852</max_angle> <!-- 2 * π -->
          </horizontal>
          <vertical>
            <samples>1</samples>
            <resolution>1</resolution>
            <min_angle>-0.126044</min_angle> <!-- (-7.22/180)*π -->
            <max_angle>0.963472</max_angle>  <!-- (55.22/180)*π -->
          </vertical>
        </scan>
        <range>
          <min>0.1</min>
          <max>200.0</max>
          <resolution>0.002</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.002</stddev>
        </noise>
      </ray>
      <plugin name="mid360_plugin" filename="libgazebo_ros_ray_sensor.so">
        <topic>/scan</topic>
        <frameName>mid360</frameName>
        <updateRate>10</updateRate>
      </plugin>
    </sensor>

    <!-- IMU 传感器 -->
    <link name="imu_link">
      <pose>0 0 0 0 0 0</pose>
      <sensor name="mid360_imu" type="imu">
        <pose>0 0 0 0 0 0</pose>
        <update_rate>100</update_rate>
        <always_on>true</always_on>
        <plugin name="imu_plugin" filename="libgazebo_ros_imu_sensor.so">
          <ros>
            <namespace>/</namespace>
            <remapping>~/out:=/livox/imu</remapping>
          </ros>
          <frame_name>imu_link</frame_name>
        </plugin>
      </sensor>
    </link>

    <joint name="imu_joint" type="fixed">
      <parent>base_link</parent>
      <child>imu_link</child>
      <pose>0 0 0.1 0 0 0</pose>
    </joint>

    <!-- Gazebo 插件配置 -->
    <plugin name="mecanum_controller" filename="libgazebo_ros_planar_move.so">
      <ros>
        <namespace>/</namespace>
        <remapping>cmd_vel:=/cmd_vel_chassis</remapping>
        <remapping>odom:=/odom</remapping>
      </ros>
      <update_rate>100</update_rate>
      <publish_rate>10</publish_rate>
      <publish_odom>false</publish_odom>
      <publish_odom_tf>false</publish_odom_tf>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <covariance_x>0.0001</covariance_x>
      <covariance_y>0.0001</covariance_y>
      <covariance_yaw>0.01</covariance_yaw>
    </plugin>

    <!-- 机器人颜色配置 -->
    <gazebo reference="base_link">
      <material>Gazebo/Grey</material>
    </gazebo>

  </model>
</sdf>
